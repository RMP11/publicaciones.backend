model Producto {
  id               Int                @id @default(autoincrement())
  codigo           String
  codigoTienda     String
  codigoReferencia String
  descripcion      String
  unidad           String
  marca            String
  precioCompra     Float
  precioVenta      Float
  alertaStockBajo  Int
  imagen           String?
  beneficio        Float?
  medidas          String?
  ProductoSucursal ProductoSucursal[]

  usuarioCreadorId      Int?
  usuarioActualizadorId Int?
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @default(now()) @updatedAt
  deletedAt           DateTime?
  VentaDetalle        VentaDetalle[]

  @@map("productos")
}
